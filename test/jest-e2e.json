{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^static/(.*)$": "<rootDir>/static/$1"
  },
  "testEnvironment": "node",
  "workerThreads": true,
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
